<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rydeit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/neutrals_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lb_300</item>
        <item name="colorSecondaryVariant">@color/lb_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <item name="android:windowBackground">@color/neutrals_100</item>
        <item name="colorSurface">@color/blue_100</item>
        <item name="colorOnSurface">@color/blue_300</item>
    </style>

    <!--頁面標題-->
    <style name="TextAppearance.Rydeit.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--頁面內文(黑字)-->
    <style name="TextAppearance.Rydeit.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Dialog頁面內文(灰字)-->
    <style name="TextAppearance.Rydeit.Dialog.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gb_500</item>
        <item name="android:textSize">14sp</item>
    </style>



    <!--輸入框標題-->
    <style name="TextAppearance.Rydeit.TextInputLayout.Title" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!--輸入框樣式-->
    <style name="Widget.Rydeit.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rydeit_text_input_layout_height</item>
        <item name="boxBackgroundColor">@color/blue_100</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <!--按鈕樣式-->
    <style name="Widget.Rydeit.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">?attr/colorPrimary</item>
        <item name="android:outlineSpotShadowColor"  tools:targetApi="p">?attr/colorPrimary</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/shr_next_button_state_list_anim
        </item>
        <item name="android:backgroundTint">@color/rydeit_btn_bg_color_selector</item>
        <item name="minHeight">@dimen/rydeit_button_min_height</item>
    </style>

    <style name="Widget.Rydeit.Button.TextButton.Superlink" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/superlink_text_color_selector</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Rydeit.Button.TextButton.EditTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/superlink_text_color_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/blue_100</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!--設定 PIN 碼鍵盤文字-->
    <style name="TextAppearance.Rydeit.PinNumber" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/keyboard_text_color_selector</item>
    </style>


</resources>