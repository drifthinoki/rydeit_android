<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stable_coin_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_400_rec_round"
    android:orientation="vertical"
    android:padding="@dimen/rydeit_stable_coin_card_padding">

    <TextView
        android:id="@+id/stable_coin_title"
        style="@style/TextAppearance.Rydeit.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stablecoin_revenue_title"
        android:textColor="@color/neutrals_100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/stable_coin_description"
            style="@style/TextAppearance.Rydeit.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stablecoin_revenue_description"
            android:textColor="@color/neutrals_100"/>

        <ImageButton
            android:id="@+id/stable_coin_eye_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_password_visible"
            android:background="?selectableItemBackground"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stable_coin_amount"
            style="@style/TextAppearance.Rydeit.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="$20.2122"
            android:textStyle="bold"
            android:textColor="@color/green_300"/>

        <TextView
            android:id="@+id/stable_coin_currency"
            style="@style/TextAppearance.Rydeit.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:text="USD"
            android:textColor="@color/green_300"/>


    </LinearLayout>


</LinearLayout>

